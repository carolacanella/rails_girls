<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @thing.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @thing.description %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@thing.picture_url, width: 600) if @thing.picture.present? %>
  <h3>Comments</h3>
  <% @comments.each do |comment| %>
    <div>
      <strong><%= comment.user_name %></strong>
      <br>
      <p><%= comment.body %></p>
      <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  <% end %>
  <%= render partial: 'comments/form', locals: { comment: @comment } %>
</p>

<%= link_to 'Edit', edit_thing_path(@thing) %> |
<%= link_to 'Back', things_path %>


<div class="row">
  <div class="col-md-9">
    <%= image_tag(@thing.picture_url, width: '100%') if @thing.picture.present? %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @thing.name %></p>
    <p><b>Description: </b><%= @thing.description %></p>
    <p>
      <%= link_to 'Edit', edit_thing_path(@thing) %> |
      <%= link_to 'Destroy', @thing, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <%= link_to 'Back', things_path %>
    </p>
  </div>
</div>
